{
    "compilerOptions": {
        "target": "es2020",
        "module": "es2015",
        "declaration": true,
        "baseUrl": ".",
        "outDir": "./build",
        "inlineSourceMap": false,
        "noFallthroughCasesInSwitch": true,
        "strict": true,
        "removeComments": false,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true
    },
    "include": [
        "./src/*.ts",
        "index.ts"
    ]
}
